<div class="container-fluid">
  <div class='d-flex flex-g-4 justify-content-between'>
  <!-- Music Events -->
  <section class="col">
    <h2>Music Events</h2>
    <div class="d-flex flex-wrap">
      {{#each events as |event|}}
        {{#isEqual event.eventType "Music"}}
          <div class="card-container" style="max-width: 500px; max-height: 600px; margin: 20px;">
            <div class="card event-card">
              <div class="card-inner">
                <img class="image" src="{{event.photo}}" alt="{{event.name}} photo">
              </div>
              <div class="card-footer">
                <h5 class="card-title">{{event.name}}</h5>
                <p class="card-text">{{event.eventType}}</p>
              </div>
            </div>
          </div>
        {{/isEqual}}
      {{/each}}
    </div>
  </section>
</div>

