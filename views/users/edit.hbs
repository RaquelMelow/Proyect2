<div class="bg-light">
  <div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10 mt-5 pt-5">
            <div class="row z-depth-3">
                <div class="col-sm-3 bg-primary rounded-left">
                    <div class="card-block text-center text-white mt-5">
                        <img src="/img/profile.png" class="img-fluid" style="width: 120px"/>
                        <h2 class="font-weight-bold mt-4" style="font-family: 'Courier New', Courier, monospace;">{{ currentUser.name }}</h2>
                        <a href="/profile">
                          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 16 16">
                            <path d="M0 1.5A1.5 1.5 0 0 1 1.5 0H3v5.5A1.5 1.5 0 0 0 4.5 7h7A1.5 1.5 0 0 0 13 5.5V0h.086a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5H14v-5.5A1.5 1.5 0 0 0 12.5 9h-9A1.5 1.5 0 0 0 2 10.5V16h-.5A1.5 1.5 0 0 1 0 14.5z"/>
                            <path d="M3 16h10v-5.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5zm9-16H4v5.5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5zM9 1h2v4H9z"/>
                          </svg>
                        </a>
                    </div>
                </div>
                <div class="col-sm-8 bg-white rounded-right">
                    <h3 class="mt-3 text-center">Edit profile</h3>
                    <hr class="bg-primary">
                    <form method="post" action="/edit">
                    <div class="input-group mb-2">
                        <input type="name" name="name" class="form-control form-control-lg bg-light fs-6 {{#if errors.name }}is-invalid{{/if}}" placeholder="Insert your new name"/>
                        {{#if errors.name }} <div class="invalid-feedback">{{ errors.name }}</div> {{/if}}
                    </div>
                    <div class="input-group mb-2">
                        <input type="text" name="email" class="form-control form-control-lg bg-light fs-6 {{#if errors.email }}is-invalid{{/if}}" placeholder="Email address"/>
                        {{#if errors.email }} <div class="invalid-feedback">{{ errors.email }}</div> {{/if}}
                    </div>
                    <div class="input-group mb-2">
                        <input type="phone" name="phone" class="form-control form-control-lg bg-light fs-6 {{#if errors.phone }}is-invalid{{/if}}" placeholder="Mobile number"/>
                        {{#if errors.phone }} <div class="invalid-feedback">{{ errors.phone }}</div> {{/if}}
                    </div>
                    <div class="input-group mb-2">
                        <input type="password" name="password" class="form-control form-control-lg bg-light fs-6 {{#if errors.password }}is-invalid{{/if}}" placeholder="Password"/>
                        {{#if errors.password }} <div class="invalid-feedback">{{ errors.password }}</div> {{/if}}
                    </div>
                    <div class="input-group mb-2">
                        <button type="submit" class="btn btn-lg btn-primary w-100 fs-6">Update profile</button>
                    </div>
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>