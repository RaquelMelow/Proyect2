<div class="container">
  <div class="row">
    {{#each events as |event|}}
      <div class="col-lg-4 col-md-6 mb-4" style="margin-top:20px;">
        <div class="card">
          <a class="card event-card" href="/events/{{event._id}}/details">
            <img class="card-img-top" src="{{event.photo}}" alt="{{event.name}} photo" style="max-height: 300px; object-fit: cover; height: 400px;">
               <div class="card-body"> 
                <div class="card-content mb-3" style="height: 100px;">
                <h5 class="card-title">{{event.name}}</h5>
                <p class="card-text">{{formatDate date}}</p>
                </div>
                </div>
          </a>
        </div>
      </div>
    {{/each}}
  </div>
</div>
